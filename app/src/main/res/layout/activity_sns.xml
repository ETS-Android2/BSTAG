<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_gradient"
    tools:context=".Sns">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_bottom_radius"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:onClick="goBack"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNS 프로필 링크"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="60px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="원하는 SNS를 선택하고\n사용자명 또는 개인 링크를 입력하세요."
        android:layout_gravity="center"
        android:textAlignment="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        >

        <Button
            android:id="@+id/instagram"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/facebook"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/youtube"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Youtube"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp"
        >
    <Button
        android:id="@+id/tiktok"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="TikTok"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/twitter"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/github"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Github"
        android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/urlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/urlLink"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:hint=""
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/urlSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:text=""
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/urlLinkChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="55dp"
                android:text=""
                android:textColor="#000000"
                />
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="NFC태그에 기록하기"
            />
    </LinearLayout>

</LinearLayout>
