<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_gradient"
    tools:context=".Map">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_bottom_radius"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지도정보"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="60px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="지도에서 좌표를 찾아 기록하세요."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingBottom="20dp"

        />
    <Button
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="좌표로 위치 정보 기록하기"
        />

    <Button
        android:id="@+id/btn_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="주소로 위치 정보 기록하기"
        />

<LinearLayout
    android:id="@+id/linear_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:visibility="gone"
    >


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="위도"
    android:layout_margin="10dp"
    />

    <EditText
        android:id="@+id/edit_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="120dp"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경도"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/edit_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="120dp"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        />
</LinearLayout>

    <Button
        android:id="@+id/go_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도에서 위치정보 받아오기"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:onClick="goGoogleMap"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/linear_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/edit_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="NFC태그에 기록하기"
        />




</LinearLayout>